<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "public-id" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	
	<resultMap id="result" type="user">
		<result property="id" column="user_id"/>
		<result property="email" column="email"/>
		<result property="password" column="password"/>
		<result property="name" column="name"/>
	</resultMap>
	<!-- ReadAll, Create, Read, Update, Delete -->

	<select id="readAll" resultMap="result">
		SELECT * FROM user;
	</select>
	<select id="read" parameterType="int" resultMap="result">
		SELECT * FROM user WHERE user_id = #{id};
	</select>
	<insert id="create" parameterType="User">
		INSERT INTO user (user_id, email, password, name) VALUES (#{id}, #{email}, #{password}, #{name});
	</insert>
	<update id = "update" parameterType="User">
		UPDATE user SET email=#{email}, password=#{password}, name = #{name};
	</update>
	<delete id="delete" parameterType="int">
		DELETE FROM user WHERE user_id=#{id};
	</delete>
</mapper>