<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "public-id" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ticket">

    <resultMap id="result" type="ticket">
        <result property="id" column="ticket_id"/>
        <result property="points" column="points"/>
        <result property="drivingId" column="driving_id"/>
    </resultMap>

    <!-- ReadAll, Create, Read, Update, Delete -->
    <select id="readAll" resultMap="result">
        SELECT * FROM ticket;
    </select>
    <select id="read" parameterType="int" resultMap="result">
        SELECT * FROM ticket WHERE ticket_id = #{id};
    </select>
    <insert id="create" parameterType="Ticket">
        INSERT INTO ticket (ticket_id, points, driving_id) VALUES (#{id}, #{points}, #{drivingId});
    </insert>
    <update id = "update" parameterType="Ticket">
        UPDATE ticket SET points=#{points}, driving_id=#{driving_id} WHERE ticket_id=#{id};
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM ticket WHERE ticket_id=#{id};
    </delete>
</mapper>